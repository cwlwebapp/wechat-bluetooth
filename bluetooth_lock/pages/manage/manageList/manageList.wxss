/* 弹框 */

.toast {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.3);
  display: flex;
  justify-content: center;
  align-items: center;
}

.toast_content {
  width: 520rpx;
  height: 340rpx;
  background-color: #f7f7f7;
  border-radius: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  color: #333;
  font-size: 36rpx;
  box-sizing: border-box;
  padding: 10rpx 0;

}

.toast_input {
  width: 292rpx;
  height: 50rpx;
  border-radius: 5rpx;
  border: solid 2rpx #aaa;
  font-size: 30rpx;
  padding-left: 15rpx; 
}

.toast_bnt {
  width: 292rpx;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
}

.toast_but {  
  border-radius: 5rpx 5rpx 5rpx 5rpx;
  border: solid 2rpx #aaa;
  padding: 10rpx 24rpx; 
  	font-size: 30rpx;
}