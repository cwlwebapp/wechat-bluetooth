/* pages/person/feedback/feedback.wxss */

.feedback {
}

.feedback_head {
  height: 307rpx;
  background-color: #30324f;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
}

.feedback_input {
  width: 689rpx;
  height: 228rpx;
  border: solid 3rpx #aaa;
  box-sizing: border-box;
  padding: 25rpx;
  color: #999;
  font-size: 30rpx;
}

.feedback_content {
  /* height: 234rpx; */
  background-color: #30324f;
  padding-left: 50rpx;
  padding-bottom: 30rpx;
}

.feedback_content_title {
  line-height: 75rpx;
  height: 75rpx;
  color: #999;
  font-size: 26rpx;
}

.addimage {
  display: flex;
  align-items: center;
}

.feedback_content_addimage {
  margin-right: 30rpx;
  width: 122rpx;
  height: 122rpx;
}

.feedback_content_image {
  display: inline-block;
  font-size: 122rpx;
}

.feedback_bnt {
  width: 100%;
  height: 100rpx;
  background-color: #30324f;
  color: #aaa;
  font-size: 36rpx;
  position: fixed;
  bottom: 0;
  text-align: center;
  line-height: 100rpx;
}
